{
  "lambdaPolicies": {
    "dynamodbAccess": {
      "Effect": "Allow",
      "Action": [
        "dynamodb:GetItem",
        "dynamodb:PutItem",
        "dynamodb:UpdateItem",
        "dynamodb:DeleteItem",
        "dynamodb:Query",
        "dynamodb:Scan"
      ],
      "Resource": [
        "arn:aws:dynamodb:*:*:table/scholarship-scholarships-*",
        "arn:aws:dynamodb:*:*:table/scholarship-jobs-*",
        "arn:aws:dynamodb:*:*:table/scholarship-websites-*"
      ]
    },
    "batchAccess": {
      "Effect": "Allow",
      "Action": [
        "batch:SubmitJob",
        "batch:DescribeJobs",
        "batch:ListJobs"
      ],
      "Resource": "*"
    },
    "bedrockAccess": {
      "Effect": "Allow",
      "Action": [
        "bedrock:InvokeModel",
        "bedrock:InvokeModelWithResponseStream"
      ],
      "Resource": "*"
    }
  },
  "batchPolicies": {
    "dynamodbAccess": {
      "Effect": "Allow",
      "Action": [
        "dynamodb:GetItem",
        "dynamodb:PutItem",
        "dynamodb:UpdateItem",
        "dynamodb:DeleteItem",
        "dynamodb:Query",
        "dynamodb:Scan"
      ],
      "Resource": [
        "arn:aws:dynamodb:*:*:table/scholarship-scholarships-*",
        "arn:aws:dynamodb:*:*:table/scholarship-jobs-*",
        "arn:aws:dynamodb:*:*:table/scholarship-websites-*"
      ]
    },
    "bedrockAccess": {
      "Effect": "Allow",
      "Action": [
        "bedrock:InvokeModel",
        "bedrock:InvokeModelWithResponseStream"
      ],
      "Resource": "*"
    },
    "logsAccess": {
      "Effect": "Allow",
      "Action": [
        "logs:CreateLogGroup",
        "logs:CreateLogStream",
        "logs:PutLogEvents"
      ],
      "Resource": "*"
    }
  }
} 