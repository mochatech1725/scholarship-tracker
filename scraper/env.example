# Environment Configuration
NODE_ENV=development
ENVIRONMENT=dev
APP_DEBUG=true

# AWS Configuration (for local development)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key

# API Configuration
COLLEGESCHOLARSHIP_API_KEY=your-collegescholarship-api-key

# GumLoop Configuration
# No API key required for free plan

# Bedrock Configuration
BEDROCK_MODEL_ID=anthropic.claude-3-sonnet-20240229-v1:0

# Scraping Configuration
MAX_SCHOLARSHIP_SEARCH_RESULTS=50
SCRAPING_DELAY_MS=2000
MAX_CONCURRENT_REQUESTS=5

# User Agent Configuration
USER_AGENT=Mozilla/5.0 (compatible; ScholarshipBot/1.0; +https://yourdomain.com/bot)

# Timeout Configuration
REQUEST_TIMEOUT_MS=30000
BATCH_JOB_TIMEOUT_MINUTES=60
LAMBDA_TIMEOUT_MINUTES=5

# Logging Configuration
LOG_LEVEL=info
LOG_RETENTION_DAYS=30

# Deduplication Configuration
DEDUPLICATION_ENABLED=true
DEDUPLICATION_WINDOW_DAYS=30

# Error Handling Configuration
MAX_RETRY_ATTEMPTS=3
RETRY_DELAY_MS=1000

# Validation Configuration
MIN_SCHOLARSHIP_AMOUNT=100
MAX_SCHOLARSHIP_AMOUNT=100000

# Default Values for Scholarship Fields
DEFAULT_COUNTRY=US
DEFAULT_ACADEMIC_LEVEL=undergraduate
DEFAULT_TARGET_TYPE=both

# Note: The following variables are automatically set by CDK and should NOT be configured here:
# - SCHOLARSHIPS_TABLE
# - JOBS_TABLE  
# - WEBSITES_TABLE
# - JOB_QUEUE_ARN
# - JOB_DEFINITION_ARN
# - S3_RAW_DATA_BUCKET 